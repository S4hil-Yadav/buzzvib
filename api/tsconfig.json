{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "types": ["./src/types/index.js"]
    },
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2020",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"]
}
